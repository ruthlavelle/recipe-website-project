{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}

    <h1>Recipe</h1>

    <table>
        <tr>
            <th>Id</th>
            <td>{{ recipe.id }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ recipe.image }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ recipe.title }}</td>
        </tr>
        <tr>
            <th>Summary</th>
            <td>{{ recipe.summary }}</td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>{{ recipe.tags }}</td>
        </tr>
        <tr>
            <th>ListOfIngredients</th>
            <td>{{ recipe.listOfIngredients }}</td>
        </tr>
        <tr>
            <th>SequenceOfSteps</th>
            <td>{{ recipe.sequenceOfSteps }}</td>
        </tr>

    </table>

    <a href="{{ path('recipe_index') }}">back to list</a>

    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">edit</a>

    {% include 'recipe/_delete_form.html.twig' with {'identifier': recipe.id} only %}

{% endblock %}