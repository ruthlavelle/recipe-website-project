<!DOCTYPE html>
<html lang="en">

    <header>
       {% if is_granted('IS_AUTHENTICATED_FULLY') %}

            Username:
            <strong>{{ app.user.username }}</strong>
            <br>
            <a href="{{ url('logout') }}">Logout</a>
        {% else %}
            <a href="{{ url('login') }}">Login</a>
           <a href="user/new">New User</a>
       {% endif %}
    </header>

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="/css/styles.css">
        {% endblock %}
    </head>

    <body>
    <div class="nav">
        <ul>
            <li>
                <a href="">Home</a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}
                <li>
                    <a href="{{ url('admin_home') }}">admin home</a>
                </li>
            {% endif %}
            <li>
                <a href="{{ url('recipe_list') }}">Recipe List</a>
            </li>

            <li>
                <a href="{{ url('recipe_new') }}">Create a New Recipe</a>
            </li>
        </ul>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>

    </body>
</html>
